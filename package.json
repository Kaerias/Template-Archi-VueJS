{
    "name": "viticia-web",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "cross-env CURRENT_ENV=local vue-cli-service serve",
        "test": "vue-cli-service test:unit",
        "lint": "vue-cli-service lint",
        "build:int": "cross-env CURRENT_ENV=integ vue-cli-service build",
        "build:prod": "cross-env CURRENT_ENV=production vue-cli-service build",
        "build:staging": "cross-env CURRENT_ENV=staging vue-cli-service build"
    },
    "dependencies": {
        "@amcharts/amcharts4": "^4.9.0",
        "@amcharts/amcharts4-geodata": "^4.1.11",
        "@babel/polyfill": "^7.6.0",
        "@fortawesome/fontawesome": "^1.1.8",
        "@fortawesome/fontawesome-free": "^5.12.1",
        "@fortawesome/fontawesome-svg-core": "^1.2.27",
        "@fortawesome/free-solid-svg-icons": "^5.12.1",
        "@fortawesome/vue-fontawesome": "^0.1.9",
        "@microsoft/applicationinsights-web": "^2.2.4",
        "@types/leaflet": "^1.5.3",
        "axios": "^0.21.1",
        "content-disposition": "^0.5.3",
        "leaflet": "^1.5.1",
        "moment": "^2.24.0",
        "register-service-worker": "^1.5.2",
        "vue": "^2.6.10",
        "vue-class-component": "^7.1.0",
        "vue-infinite-loading": "^2.4.4",
        "vue-router": "^3.1.3",
        "vue-the-mask": "^0.11.1",
        "vue2-leaflet": "^2.2.1",
        "vue2-leaflet-markercluster": "^3.0.0",
        "vuetify": "^2.1.4",
        "vuex": "^3.1.1",
        "vuex-persistedstate": "^2.7.1"
    },
    "devDependencies": {
        "@mdi/font": "^4.9.95",
        "@types/content-disposition": "^0.5.2",
        "@types/jest": "^24.0.19",
        "@vue/cli-plugin-babel": "^4.0.3",
        "@vue/cli-plugin-pwa": "^4.0.3",
        "@vue/cli-plugin-typescript": "^4.0.3",
        "@vue/cli-plugin-unit-jest": "^4.0.3",
        "@vue/cli-service": "^4.0.3",
        "@vue/test-utils": "^1.0.0-beta.20",
        "babel-core": "7.0.0-bridge.0",
        "cross-env": "^6.0.3",
        "deepmerge": "^4.1.1",
        "fibers": "^4.0.1",
        "material-design-icons-iconfont": "^5.0.1",
        "node-sass": "^4.12.0",
        "sass": "^1.23.0",
        "sass-loader": "^8.0.0",
        "stylus": "^0.54.7",
        "stylus-loader": "^3.0.1",
        "ts-jest": "^24.1.0",
        "typescript": "^3.6.4",
        "vue-cli-plugin-vuetify": "^1.0.2",
        "vue-template-compiler": "^2.6.10",
        "vuetify-loader": "^1.3.0"
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 10"
    ],
    "jest": {
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "vue",
            "ts",
            "tsx"
        ],
        "transform": {
            "^.+\\.vue$": "vue-jest",
            ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
            "^.+\\.ts?$": "ts-jest"
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "snapshotSerializers": [
            "jest-serializer-vue"
        ],
        "testMatch": [
            "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
        ],
        "testURL": "http://localhost/",
        "globals": {
            "ts-jest": {
                "babelConfig": true
            }
        }
    }
}
